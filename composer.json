{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "anhskohbo/no-captcha": "^3.0",
        "barryvdh/laravel-dompdf": "v0.8.1",
        "consoletvs/charts": "5.*",
        "doctrine/cache": "^1.8",
        "doctrine/dbal": "^2.8",
        "dompdf/dompdf": "v0.8.2",
        "guzzlehttp/guzzle": "^6.3",
        "jrm2k6/cloudder": "0.4.*",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "laravelcollective/html": "^5.4.0",
        "laravelista/lumen-vendor-publish": "^2.1",
        "maddhatter/laravel-fullcalendar": "^1.3",
        "nikic/php-parser": "v3.1",
        "owen-it/laravel-auditing": "7.0",
        "paypal/rest-api-sdk-php": "*",
        "php-coveralls/php-coveralls": "^2.1",
        "s-ichikawa/laravel-sendgrid-driver": "1.2.6",
        "timetoogo/pinq": "3.4.1",
        "venturecraft/revisionable": "^1.28"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan clear-compiled",
            "php artisan optimize",
            "chmod -R 777 public/"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
